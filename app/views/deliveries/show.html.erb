<div class="container">
  <ul class="list-inline">
  <h1><%= @delivery.name %></h1>
      <li><% Loading.where(delivery_id: @delivery).each do |loading| %></li>
        <li> <%= loading.name %> <%= loading.id %>  </li>
        <li><%= loading.address %></li>
        <% loading.materials.each do |material| %>
          <% if material.quantity > 0 %>
            <% if material.quantity > 1 %>
            <p>Loading <%= material.quantity %>  pallets of <%= material.name %></p>
            <% else %>
            <p>Loading <%= material.quantity %>  pallet of <%= material.name %></p>
            <% end %>
            <% else %>
            <% if material.quantity < -1 %>
            <p>Unloading <%= - material.quantity %>  pallets of <%= material.name%></p>
            <% else %>
            <p>Unloading <%= - material.quantity %>  pallet of <%= material.name%></p>
            <% end %>
          <% end %>
        <% end %>
      <% end %>
  </ul>
</div>

<%= link_to "Add a Loading", new_delivery_loading_path(@delivery), class: "btn btn-primary bottom" %>


<div id="map"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
